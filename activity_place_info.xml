<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abevillalobos.lakbayph.HomeActivity"
    android:background="@drawable/banigedt">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="MY ACCOUNT"
        android:textColor="#FFF"
        android:id="@+id/pi_btn_user"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:background="@null"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/pi_lakbay"
        android:text="LAKBAY"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_below="@+id/pi_btn_user"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:background="#87000000" />

    <TextView
        android:id="@+id/pi_place"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pi_lakbay"
        android:text="PLACES"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:background="#3cffffff" />

    <TextView
        android:id="@+id/pi_pname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pi_place"
        android:text="PNAME"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:background="#87000000" />

    <TextView
        android:id="@+id/pi_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pi_pname"
        android:text="LOCATION"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal"
        android:background="#3cffffff" />

    <TextView
        android:id="@+id/pi_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pi_loc"
        android:text="CONTENT"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal"
        android:background="#3cffffff" />
</RelativeLayout>
