<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abevillalobos.lakbayph.HomeActivity"
    android:background="@drawable/banigedt">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="MY ACCOUNT"
        android:textColor="#ffffff"
        android:id="@+id/h_btn_user"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:background="@null"
        android:textStyle="bold" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textColor="#ffffff"
        android:id="@+id/h_btn_about"
        android:layout_alignBottom="@+id/h_btn_user"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:textSize="20sp"
        android:background="@null"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/h_lakbay"
        android:text="LAKBAY"
        android:textSize="88sp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/h_btn_user"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/h_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/h_lakbay">
        <Button
            android:id="@+id/h_imb_culture"
            android:text="Culture"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/cultureedt"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/h_imb_beach"
            android:text="BEACH"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/beachedt"
            android:layout_margin="5dp"
            android:typeface="serif"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/h_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/h_ll1">
        <Button
            android:id="@+id/h_imb_nature"
            android:text="NATURE"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/natureedt"
            android:layout_margin="5dp"
            android:typeface="serif"
            android:textStyle="bold" />

        <Button
            android:id="@+id/h_imb_festivals"
            android:text="FESTIVALS"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/festivedt"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEARBY PLACES"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/h_imb_nearby"
        android:layout_below="@+id/h_ll2"
        android:layout_alignParentEnd="true"
        android:background="@drawable/nearbyedt"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>
