<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abevillalobos.lakbayph.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:id="@+id/h_txv_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/h_txv_signout"
        android:layout_alignBottom="@+id/h_txv_user"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/h_img_lakbay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_below="@+id/h_txv_user"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@id/h_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/h_img_lakbay">
        <ImageButton
            android:id="@+id/h_imb_beach1"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/beach"/>

        <ImageButton
            android:id="@+id/h_imb_beach2"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/beach"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/h_ll1">
        <ImageButton
            android:id="@+id/h_imb_beach3"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/beach"/>

        <ImageButton
            android:id="@+id/h_imb_beach4"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/beach"/>
    </LinearLayout>
</RelativeLayout>
