<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abevillalobos.lakbayph.HomeActivity"
    android:background="@drawable/banigedt">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="MY ACCOUNT"
        android:textColor="#FFF"
        android:id="@+id/pl_btn_user"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:background="@null"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/pl_lakbay"
        android:text="LAKBAY"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_below="@+id/pl_btn_user"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:background="#88000000" />

    <TextView
        android:id="@+id/pl_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pl_lakbay"
        android:text="PLACES"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|italic"
        android:background="#3cffffff" />

    <ListView
        android:id="@+id/pl_list_place"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pl_place"
        android:background="#78ffffff"
        android:clickable="false" />
</RelativeLayout>
